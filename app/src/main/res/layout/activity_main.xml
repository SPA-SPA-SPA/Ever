<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arthurlai.ever.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView_0"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitStart"
            android:src="@drawable/pngpkq" />

        <Button
            android:id="@+id/FindWord_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_0"
            android:layout_centerHorizontal="true"
            android:text="查询单词"
            android:onClick="findWord"/>

        <Button
            android:id="@+id/NoteBook_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/FindWord_page"
            android:layout_alignStart="@+id/FindWord_page"
            android:layout_below="@+id/FindWord_page"
            android:layout_marginTop="20dp"
            android:onClick="WordList"
            android:text="生词本" />

        <Button
            android:id="@+id/Study_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/FindWord_page"
            android:layout_alignStart="@+id/FindWord_page"
            android:layout_below="@+id/NoteBook_page"
            android:layout_marginTop="20dp"
            android:onClick="Study"
            android:text="背单词" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
